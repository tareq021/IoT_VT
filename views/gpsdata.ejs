<!DOCTYPE html>
<html>

<head>
    <title><%=title%></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="http://code.jquery.com/jquery-1.12.0.min.js"></script>
</head>

<body>

        <div class="container">
            <div class="row">

                <h4><%=title%></h4>

                <table class="table table-striped table-bordered" id="myTable">
                    <thead>
                        <tr>
                            <td>SL</td>
                            <td>Device ID</td>
                            <td>Device Date</td>
                            <td>Device Time</td>
                            <td>Receive Date</td>
                            <td>Receive Time</td>
                            <td>Latitude</td>
                            <td>Longitude</td>
                            <td>Fix</td>
                            <td>Satellites</td>
                            <td>Altitude</td>
                            <td>Speed</td>
                            <td>Course</td>
                            <td>Variation</td>
                            <td>In Map</td>
                        </tr>
                    </thead>
                    <tbody>
                    <% for(var i=0; i < dbData.length; i++) { %>
                    <tr>
                    <td><%= i+1 %></td>
                    <td><%= dbData[i].deviceID %></td>
                    <td><%= dbData[i].deviceDate %></td>
                    <td><%= dbData[i].deviceTime %></td>
                    <td><%= dbData[i].receiveDate %></td>
                    <td><%= dbData[i].receiveTime %></td>
                    <td><%= dbData[i].latitude %></td>
                    <td><%= dbData[i].longitude %></td>
                    <td><%= dbData[i].fix %></td>
                    <td><%= dbData[i].satellites %></td>
                    <td><%= dbData[i].altitude %></td>
                    <td><%= dbData[i].deviceSpeed %></td>
                    <td><%= dbData[i].devicecourse %></td>
                    <td><%= dbData[i].deviceVariation %></td>  
                    <td><a href="/onmap?latitude=<%= dbData[i].latitude %>&longitude=<%= dbData[i].longitude %>" class="btn btn-info" role="button">Map</a></td>  
                    </tr>
                    <% } %>

                    </tbody>
                </table>
            </div>
        </div>
</body>

</html>