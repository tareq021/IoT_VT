<!DOCTYPE html>
<html>

<head>
    <title><%=title%></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="http://code.jquery.com/jquery-1.12.0.min.js"></script>
</head>

<body>

        <div class="container">
            <div class="row">

                <h4><%=title%></h4>

                <a href="/addDevice" class="btn btn-success">Add Device</a>

                <table class="table table-striped table-bordered" id="myTable">
                    <thead>
                        <tr>
                            <td>SL</td>
                            <td>Device ID</td>                            
                            <td>Location Details</td>
                            <td>Remove Device</td>
                        </tr>
                    </thead>
                    <tbody>
                    <% for(var i=0; i < devices.length; i++) { %>
                    <tr>
                    <td><%= i+1 %></td>
                    <td><%= devices[i] %></td>                     
                    <td><a href="/getDataByDeviceId/<%= devices[i]%>" class="btn btn-info" role="button">Locations</a></td>  
                    <td><a href="/deleteDevice/<%= devices[i]%>" class="btn btn-danger" role="button">Remove</a></td>  
                    </tr>
                    <% } %>

                    </tbody>
                </table>
            </div>
        </div>
</body>

</html>